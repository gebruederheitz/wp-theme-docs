{
    "name": "gebruederheitz/wp-theme-docs",
    "description": "Add simple admin pages or a Wordpress theme documentation page to the editor.",
    "type": "library",
    "license": "GPL-3.0-only",
    "autoload": {
        "psr-4": {
            "Gebruederheitz\\Wordpress\\AdminPage\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Andreas Maros",
            "email": "andreas.maros@gebruederheitz.de"
        }
    ],
    "require": {
        "php": ">=8.0",
        "gebruederheitz/simple-singleton": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "wecodemore/wpstarter": "~2.0",
        "johnpbloch/wordpress-core": "6.9.*@stable",
        "fastvolt/markdown": "^0.2.5"
    },
    "scripts": {
        "lint": "phpstan analyse -c .phpstan.neon --memory-limit=2G"
    },
    "config": {
        "allow-plugins": {
            "johnpbloch/wordpress-core-installer": true
        }
    },
    "extra": {
        "wordpress-content-dir": ".wp/wordpress/wp-content",
        "wordpress-install-dir": ".wp/wordpress"
    },
    "suggest": {
        "fastvolt/markdown": "^0.2.5: For rendering markdown documentation."
    }
}
